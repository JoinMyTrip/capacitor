{
  "name": "capacitor",
  "private": true,
  "scripts": {
    "prettier": "prettier '+(app-template/**/*.{css,html,js}|{cli,core,plugin-template}/src/**/*.{css,html,js,ts}|{android/capacitor,android-template/app,capacitor-cordova-android-plugins}/src/**/*.java)'",
    "fmt": "npm run prettier -- --write",
    "publish": "bash scripts/prerelease.sh && lerna run build && lerna publish --force-publish --skip-git && npm run publish-push",
    "publish-push": "bash scripts/deploy.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier -- --check"
    }
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^2.4.0",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.0"
  }
}
